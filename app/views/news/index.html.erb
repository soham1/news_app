<%= render 'banner' %>

<h2>Listing News</h2>

<%= link_to 'New News', new_news_path %>
<%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Date</th>
    <th>User</th>
  </tr>
 
  <% @news.each do |news| %>
    <tr>
      <td><%= news.title %></td>
      <td><%= news.summary %></td>
      <td><%= news.date %></td>
      <td><%= news.user.email %></td>
      <td><%= link_to 'Show', news_path(news) %></td>
      <td><%= link_to 'Edit', edit_news_path(news) %></td>
      <td><%= link_to 'Delete', news_path(news),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>